<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ViewFlipper
            android:id="@+id/viewFlipper_details1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/specificpic1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            </ImageView>

            <ImageView
                android:id="@+id/specificpic2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </ImageView>
        </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/explain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="현재"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/nowweather"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/nowtemp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="#A1D6E3"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="3시간 뒤"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/weather3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/temp3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="#A1D6E3"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="6시간 뒤"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/weather6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/temp6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="#A1D6E3"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="9시간 뒤"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/weather9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/temp9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="#A1D6E3"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
             >

            <Button
                android:id="@+id/mapp"
                android:background="@drawable/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>